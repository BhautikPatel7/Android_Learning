<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JsonProfileActivity"
    android:background="#5A7488">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="35dp"
            android:layout_marginTop="10dp"
            style="@style/TextView_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9FDFA2"
            android:fontFamily="@font/alike_angular"
            android:gravity="left"
            android:padding="15dp"
            android:text="Manage Your Profile Here " />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/json_profile_edittext_name"
            android:background="#FFFFFF"
            android:hint="Name"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText_20">

        </EditText>
        <EditText
            android:textColor="@color/black"
            android:id="@+id/json_profile_edittext_email"
            android:inputType="textEmailAddress"
            android:background="#FFFFFF"
            android:hint="Email Id"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText_20">

        </EditText>
        <EditText
            android:textColor="@color/black"
            android:id="@+id/json_profile_edittext_contact"
            android:inputType="number"
            android:background="#FFFFFF"
            android:hint="Contact No."
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText_20">

        </EditText>
        <EditText
            android:textColor="@color/black"
            android:id="@+id/json_profile_edittext_passcode"
            android:inputType="textPassword"
            android:background="#FFFFFF"
            android:hint="Passcode"
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText_20">

        </EditText>
        <EditText
            android:textColor="@color/black"
            android:visibility="gone"
            android:id="@+id/json_profile_edittext_confirm_passcode"
            android:inputType="textPassword"
            android:background="#FFFFFF"
            android:hint="Confirm Passcode"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText_20">

        </EditText>
        <EditText
            android:textColor="@color/black"
            android:id="@+id/json_profile_edittext_date_of_birth"
            android:editable="false"
            android:background="#FFFFFF"
            android:hint="Date Of Birth"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/calender"
            style="@style/EditText_20">

        </EditText>

        <RadioGroup
            android:id="@+id/json_signup_radiogrop_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <RadioButton
                android:id="@+id/json_profile_radiobutton_male"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="17dp"
                android:layout_weight="1.5"></RadioButton>
            <RadioButton
                android:id="@+id/json_profile_radiobutton_female"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="17dp"
                android:layout_weight="1.5"></RadioButton>
            <RadioButton
                android:id="@+id/json_profile_radiobutton_transgender"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transgender"
                android:textSize="17dp"
                android:layout_weight="1"></RadioButton>

        </RadioGroup>
        <Spinner
            android:id="@+id/json_signup_spinner_city"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/json_Profile_button_editprofile"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="EditProfile"
            style="@style/button_20"
            android:layout_width="200dp"
            android:layout_height="50dp"></Button>
        <Button
            android:id="@+id/json_profile_button_submit"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Submit"
            style="@style/button_20"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:visibility="gone"></Button>
        <Button
            android:id="@+id/json_profile_button_delete_profile"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Delete Profile"
            style="@style/button_20"
            android:layout_width="200dp"
            android:layout_height="50dp"></Button>
        <Button
            android:id="@+id/json_profile_button_logut"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Logout"
            style="@style/button_20"
            android:layout_width="200dp"
            android:layout_height="50dp"></Button>

    </LinearLayout>

</ScrollView>