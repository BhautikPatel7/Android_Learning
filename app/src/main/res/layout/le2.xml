<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="300dp"

        android:background="@drawable/logo"></ImageView>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/text_view"
        style="@style/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heading2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />

    <EditText
        android:id="@+id/name"
        style="@style/edit_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:layout_marginTop="20dp"
        android:hint="Enter Your name"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/email_2"
        style="@style/edit_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:hint="Plese Enter your Email ID"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/code"
        style="@style/edit_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_2"
        android:layout_marginTop="20dp"
        android:hint="Enter Sequrity Code"
        android:inputType="textPassword"
        android:minHeight="48dp" />
    <EditText
        android:textColor="@color/white"
        android:id="@+id/captcha"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Veryfy Captcha"
        android:layout_below="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"/>
    <Button

        android:textColor="@color/black"
        android:backgroundTint="@color/teal_700"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/captcha"
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>